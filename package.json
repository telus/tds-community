{
  "name": "tds-community",
  "version": "1.0.0",
  "description": "The TELUS Design System community featuring shared React components",
  "main": "n/a",
  "repository": "git@github.com:telusdigital/tds-community.git",
  "author": "TELUS digital",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "samples/*",
    "shared/**"
  ],
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap && yarn build --all",
    "build": "node scripts/build.js",
    "build-docs": "styleguidist build --config config/styleguide.config.js",
    "build-docs:styleguide": "styleguidist build --config config/styleguide.config.js",
    "ci:build": "yarn build --all",
    "ci:build-docs:styleguide-staging": "STYLEGUIDIST_ENV=staging yarn run build-docs:styleguide",
    "ci:build-docs:styleguide-production": "STYLEGUIDIST_ENV=production yarn run build-docs:styleguide",
    "ci:build-docs": "npm-run-all --parallel ci:build-docs:styleguide-*",
    "ci:test": "npm-run-all --parallel lint test",
    "contributors:update": "node scripts/update-contributors.js",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "deploy:docs": "node ./scripts/deploy-docs.js",
    "deploy:package": "scripts/publish.sh",
    "dev": "styleguidist server --config config/styleguide.config.js",
    "dev:e2e": "STYLEGUIDIST_ENV=e2e styleguidist server --config config/styleguide.config.js",
    "lerna:publish": "node scripts/publish.js",
    "lint:js": "eslint packages samples config docs scripts/*.js --ext '.js,.jsx' --config config/eslint.config.js --max-warnings 0 --fix",
    "lint:scss": "stylelint '{packages,samples}/**/*.scss' --config config/stylelint.config.js",
    "lint:ec": "echint",
    "lint": "npm-run-all --parallel lint:*",
    "prepr": "yarn test:e2e && node scripts/prePr.js --conventional-commits --yes",
    "scaffold": "node scripts/scaffold.js",
    "test": "jest --config config/jest.config.js",
    "test:e2e": "node scripts/e2e.js",
    "test:u": "yarn test -u",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "@tds/core-responsive": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@commitlint/config-lerna-scopes": "^6.1.3",
    "@commitlint/prompt": "^6.1.3",
    "@tds/core-box": "^1.0.1",
    "@tds/core-chevron-link": "^1.0.2",
    "@tds/core-colours": "^1.0.0",
    "@tds/core-css-reset": "^1.0.0",
    "@tds/core-flex-grid": "^2.2.0",
    "@tds/core-hairline-divider": "^1.0.0",
    "@tds/core-heading": "^1.0.1",
    "@tds/core-image": "^1.0.0",
    "@tds/core-input": "^1.0.3",
    "@tds/core-link": "^1.0.3",
    "@tds/core-ordered-list": "^1.0.1",
    "@tds/core-paragraph": "^1.0.2",
    "@tds/core-strong": "^1.0.0",
    "@tds/core-text": "^1.0.2",
    "@tds/core-unordered-list": "^1.0.1",
    "@telusdigital/eslint-config": "^1.2.0",
    "all-contributors-cli": "^4.11.1",
    "autoprefixer": "^8.3.0",
    "aws-sdk": "^2.230.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "case": "^1.5.4",
    "chromedriver": "^2.38.0",
    "commitizen": "^2.9.6",
    "css-modules-loader-core": "^1.1.0",
    "echint": "^4.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jest-enzyme": "^7.0.0",
    "lerna": "^2.10.2",
    "lerna-update-wizard": "^0.9.4",
    "lint-staged": "^7.0.4",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nightwatch": "^1.0.0",
    "nightwatch-accessibility": "^1.6.0",
    "node-emoji": "^1.8.1",
    "node-resemble-js": "^0.2.0",
    "node-sass": "^4.8.3",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-styleguidist": "^7.0.7",
    "request": "^2.85.0",
    "rollup": "^0.58.0",
    "rollup-plugin-babel": "^4.1.0",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^1.6.1",
    "s3-website": "^3.3.0",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.1.1",
    "stylelint-config-prettier": "^3.0.4",
    "stylelint-config-recommended-scss": "^3.1.0",
    "stylelint-scss": "^3.0.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --ext '.js,.jsx' --config config/eslint.config.js --quiet --fix",
        "git add"
      ],
      "*.scss": "stylelint --config config/stylelint.config.js",
      "*.md": [
        "prettier --write",
        "git add"
      ],
      "*": "echint"
    },
    "ignore": [
      "**/*.{png,jpeg,jpg}"
    ]
  },
  "echint": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/**.svg",
      "**/**.log",
      "**/__snapshots__/**",
      "**/**.tgz",
      "styleguide/**",
      "**/reports/*.xml",
      "**/**.png",
      "build/**"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn test && yarn contributors:update",
      "pre-push": "yarn ci:build && npm-run-all --parallel test lint build-docs"
    }
  }
}
